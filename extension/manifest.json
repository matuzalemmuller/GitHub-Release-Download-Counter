{
    "manifest_version": 2,
    "name": "GitHub Release Download Counter",
    "version": "1.0.0",

    "author": "Matuzalem (Mat) Muller",
    "description": "Displays download count of release assets in public GitHub repositories",

    "icons": {
        "16": "icon/icon16.png",
        "48": "icon/icon48.png",
        "128": "icon/icon128.png"
    },

    "content_scripts": [
        {
          "matches": [
            "https://github.com/*/*/releases*"
          ],
          "js": ["content.js"]
        }
      ]
  }